<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Change Password - BookMart</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body, html {
      height: 100%;
      font-family: 'Inter', sans-serif;
      background: #f8f6f1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      overflow-x: hidden;
    }

    .main-container {
      display: flex;
      width: 100%;
      max-width: 900px;
      height: 550px;
      background: white;
      border-radius: 16px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.1);
      overflow: hidden;
    }

    /* Left Side - Branded Section */
    .left-section {
      flex: 1;
      background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 2rem 1.5rem;
      color: white;
      position: relative;
      overflow: hidden;
    }

    .left-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, rgba(212, 165, 116, 0.1), transparent);
      z-index: 1;
    }

    .brand-content {
      position: relative;
      z-index: 2;
      text-align: center;
    }

    .logo {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, #d4a574, #c19653);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      box-shadow: 0 10px 25px rgba(212, 165, 116, 0.3);
    }

    .logo i {
      font-size: 1.5rem;
      color: white;
    }

    .brand-name {
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      letter-spacing: -1px;
    }

    .brand-tagline {
      font-size: 0.9rem;
      font-weight: 400;
      opacity: 0.8;
      margin-bottom: 1rem;
    }

    .welcome-text {
      font-size: 1.3rem;
      font-weight: 600;
      opacity: 0.9;
    }

    /* Right Side - Form Section */
    .right-section {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 2rem 1.5rem;
      background: white;
    }

    .form-container {
      width: 100%;
      max-width: 320px;
      margin: 0 auto;
    }

    .form-header {
      margin-bottom: 1.5rem;
    }

    .form-header h2 {
      font-size: 1.4rem;
      font-weight: 600;
      color: #2d2d2d;
      margin-bottom: 0.5rem;
    }

    .form-header p {
      color: #6b6b6b;
      font-size: 0.85rem;
      line-height: 1.4;
    }

    .form-group {
      margin-bottom: 1.2rem;
      position: relative;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.4rem;
      color: #2d2d2d;
      font-weight: 500;
      font-size: 0.85rem;
    }

    .input-wrapper {
      position: relative;
    }

    .form-input {
      width: 100%;
      padding: 12px 16px 12px 40px;
      border: 2px solid #e8e4db;
      border-radius: 10px;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      background: #fafafa;
    }

    .form-input:focus {
      outline: none;
      border-color: #d4a574;
      box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.1);
      background: white;
    }

    .input-icon {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: #9b9b9b;
      font-size: 0.9rem;
    }

    .error-message {
      color: #ec1a1a;
      font-size: 0.8rem;
      margin-top: 0.4rem;
      min-height: 16px;
    }

    .server-error {
      background: #fee;
      color: #ec1a1a;
      padding: 0.6rem;
      border-radius: 8px;
      font-size: 0.85rem;
      margin-bottom: 1.2rem;
      text-align: center;
    }

    .server-success {
      background: #f0fff4;
      color: #22c55e;
      padding: 0.6rem;
      border-radius: 8px;
      font-size: 0.85rem;
      margin-bottom: 1.2rem;
      text-align: center;
      border: 1px solid #bbf7d0;
    }

    .change-btn {
      width: 100%;
      padding: 12px;
      background: linear-gradient(135deg, #d4a574, #c19653);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-bottom: 1rem;
    }

    .change-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(212, 165, 116, 0.3);
    }

    .change-btn:active {
      transform: translateY(0);
    }

    .change-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .back-link {
      display: flex;
      align-items: center;
      justify-content: center;
      color: rgba(0, 0, 255, 0.825);
      text-decoration: none;
      font-size: 0.85rem;
      font-weight: 500;
      transition: all 0.3s ease;
      padding: 0.5rem;
      border-radius: 8px;
    }

    .back-link:hover {
      color: blue;
      background: rgba(0, 0, 255, 0.05);
      text-decoration: none;
    }

    .back-link i {
      margin-right: 0.4rem;
      font-size: 0.8rem;
    }

    .info-box {
      background: #f8f9ff;
      border: 1px solid #e1e8ff;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: flex-start;
    }

    .info-box i {
      color: #4f46e5;
      margin-right: 0.75rem;
      margin-top: 0.1rem;
      font-size: 1rem;
    }

    .info-box p {
      color: #4b5563;
      font-size: 0.85rem;
      line-height: 1.4;
      margin: 0;
    }



    /* Responsive Design */
    @media (max-width: 1024px) {
      .main-container {
        max-width: 800px;
        height: 500px;
      }
    }

    @media (max-width: 768px) {
      body {
        padding: 15px;
      }
      
      .main-container {
        flex-direction: column;
        height: auto;
        max-width: 400px;
        border-radius: 12px;
      }
      
      .left-section {
        min-height: 200px;
        padding: 1.5rem;
      }
      
      .right-section {
        padding: 1.5rem;
      }
      
      .logo {
        width: 50px;
        height: 50px;
        margin-bottom: 1rem;
      }
      
      .logo i {
        font-size: 1.2rem;
      }
      
      .brand-name {
        font-size: 1.5rem;
        margin-bottom: 0.3rem;
      }
      
      .brand-tagline {
        font-size: 0.8rem;
        margin-bottom: 0.8rem;
      }
      
      .welcome-text {
        font-size: 1.1rem;
      }
      
      .form-header h2 {
        font-size: 1.3rem;
      }
      
      .form-header p {
        font-size: 0.8rem;
      }
    }

    @media (max-width: 480px) {
      body {
        padding: 10px;
      }
      
      .main-container {
        max-width: 100%;
      }
      
      .left-section {
        padding: 1.2rem;
        min-height: 180px;
      }
      
      .right-section {
        padding: 1.2rem;
      }
      
      .form-input {
        font-size: 16px; /* Prevents zoom on iOS */
      }
    }
  </style>
</head>
<body>
  <div class="main-container">
    <!-- Left Side - Branded Section -->
    <div class="left-section">
      <div class="brand-content">
        <div class="logo">
          <i class="fas fa-book-open"></i>
        </div>
        <div class="brand-name">BookMart</div>
        <div class="brand-tagline">Your Gateway to Knowledge</div>
        <div class="welcome-text">Secure Access</div>
      </div>
    </div>

    <!-- Right Side - Form Section -->
    <div class="right-section">
      <div class="form-container">
        <div class="form-header">
          <h2>Change Password</h2>
          <p>Create a new secure password for your account</p>
        </div>



        <div id="serverMessage" class="server-error" style="display: none;"></div>
        <div id="successMessage" class="server-success" style="display: none;"></div>

        <form id="changePasswordForm" action="/reset-password" method="POST" onsubmit="return validateForm()">
          <div class="form-group">

            <div class="input-wrapper">
              <i class="fas fa-lock input-icon"></i>
              <input type="password" name="newPass1" id="newPass1" class="form-input" placeholder="Enter new password" />
            </div>
            <div id="newPass1Error" class="error-message"></div>
          </div>

          <div class="form-group">

            <div class="input-wrapper">
              <i class="fas fa-lock input-icon"></i>
              <input type="password" name="newPass2" id="newPass2" class="form-input" placeholder="Re-enter new password" />
            </div>
            <div id="newPass2Error" class="error-message"></div>
          </div>

          <button type="submit" class="change-btn" id="changeBtn">
            <i class="fas fa-key" style="margin-right: 0.5rem;"></i>
            Change Password
          </button>
        </form>

        <a class="back-link" href="/login">
          <i class="fas fa-arrow-left"></i>
          Back to Login
        </a>
      </div>
    </div>
  </div>

  <script>
    // Get form elements
    const passid = document.getElementById('newPass1');
    const cpassid = document.getElementById('newPass2');
    const error4 = document.getElementById('newPass1Error');
    const error5 = document.getElementById('newPass2Error');

    function passValidateChecking() {
      const passval = passid.value;
      const cpassval = cpassid.value;

      const strongPassword = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;

      if (!strongPassword.test(passval)) {
        error4.style.display = 'block';
        error4.innerHTML = "Password must be 8+ characters, include uppercase, lowercase, number & special character";
      } else {
        error4.style.display = 'none';
        error4.innerHTML = '';
      }

      if (passval !== cpassval && cpassval !== '') {
        error5.style.display = 'block';
        error5.innerHTML = 'Passwords do not match';
      } else {
        error5.style.display = 'none';
        error5.innerHTML = '';
      }
    }

    function validateForm() {
      const newPass1 = document.getElementById('newPass1').value.trim();
      const newPass2 = document.getElementById('newPass2').value.trim();
      const changeBtn = document.getElementById('changeBtn');
      let valid = true;

      // Clear previous errors
      error4.style.display = 'none';
      error4.innerHTML = '';
      error5.style.display = 'none';
      error5.innerHTML = '';

      // Run validation
      passValidateChecking();

      // Check if there are any visible errors
      if (error4.style.display === 'block' || error5.style.display === 'block') {
        valid = false;
      }

      // Check for empty fields
      if (!newPass1) {
        error4.style.display = 'block';
        error4.innerHTML = 'Please enter a new password';
        valid = false;
      }

      if (!newPass2) {
        error5.style.display = 'block';
        error5.innerHTML = 'Please confirm your new password';
        valid = false;
      }

      if (valid) {
        // Disable button to prevent double submission
        changeBtn.disabled = true;
        changeBtn.innerHTML = '<i class="fas fa-spinner fa-spin" style="margin-right: 0.5rem;"></i>Changing...';
      }

      return valid;
    }

    // Add event listeners for real-time validation
    passid.addEventListener('input', passValidateChecking);
    cpassid.addEventListener('input', passValidateChecking);

    // Functions to show server messages
    function showServerMessage(message, type = 'error') {
      if (type === 'error') {
        const errorDiv = document.getElementById('serverMessage');
        errorDiv.textContent = message;
        errorDiv.style.display = 'block';
        document.getElementById('successMessage').style.display = 'none';
      } else if (type === 'success') {
        const successDiv = document.getElementById('successMessage');
        successDiv.textContent = message;
        successDiv.style.display = 'block';
        document.getElementById('serverMessage').style.display = 'none';
      }
    }

    // Reset button state if form submission fails
    window.addEventListener('load', function() {
      const changeBtn = document.getElementById('changeBtn');
      changeBtn.disabled = false;
      changeBtn.innerHTML = '<i class="fas fa-key" style="margin-right: 0.5rem;"></i>Change Password';
    });
  </script>
</body>
</html>