<div class="d-flex justify-content-center mt-4">
  <ul class="pagination">

    <% 
      const sortQuery = sort ? `&sort=${sort}` : ''; 
      const filterQuery = (gt && lt) ? `&gt=${gt}&lt=${lt}` : '';
      const extraQuery = `${sortQuery}${filterQuery}`;
    %>

    <!-- Previous button -->
    <% if (currentPage > 1) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage - 1 %><%= extraQuery %>">&laquo; Prev</a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <span class="page-link">&laquo; Prev</span>
      </li>
    <% } %>

    <!-- Page numbers -->
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %><%= extraQuery %>"><%= i %></a>
      </li>
    <% } %>

    <!-- Next button -->
    <% if (currentPage < totalPages) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage + 1 %><%= extraQuery %>">Next &raquo;</a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <span class="page-link">Next &raquo;</span>
      </li>
    <% } %>

  </ul>
