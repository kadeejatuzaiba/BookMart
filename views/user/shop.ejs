<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
  window.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const sortValue = urlParams.get('sort');
    const gt = urlParams.get('gt');
    const lt = urlParams.get('lt');

    // Highlight the active sort button
    if (sortValue) {
      const activeSort = document.querySelector(`.sort-btn[href*="sort=${sortValue}"]`);
      if (activeSort) {
        activeSort.classList.add('active-sort');
      }
    }

    // Highlight the active price filter button
    if (gt && lt) {
      document.querySelectorAll('.price-btn').forEach(btn => {
        if (btn.href.includes(`gt=${gt}`) && btn.href.includes(`lt=${lt}`)) {
          btn.classList.add('active-sort');
        }
      });
    }
  });

function toggleWishlist(productId, btn) {
  $.ajax({
    url: '/toggleWishlist',
    method: 'POST',
    data: { productId },
    success: (response) => {
      if (response.status) {

              const wishlistBadge=$("#wishlistCount")
            wishlistBadge.text(response.wishlistCount);

      if (response.wishlistCount > 0) {
        wishlistBadge.removeClass("d-none"); // show badge
      } else {
        wishlistBadge.addClass("d-none");    // hide badge if 0
      }
        // Toggle icon based on action
        if (response.action === 'added') {
          btn.innerText = '‚ù§Ô∏è';
          Swal.fire({
            title: "Added to wishlist",
            text: response.message,
            icon: 'success',
            timer: 1500
          });
        } else {
          btn.innerText = 'ü§ç';
          Swal.fire({
            title: "Removed from wishlist",
            text: response.message,
            icon: 'info',
            timer: 1500
          });
        }
      } else {
        Swal.fire({
          title: "Warning",
          text: response.message,
          icon: 'warning',
          timer: 1500
        });
      }
    },
    error: () => {
      Swal.fire({
        title: 'Error',
        text: 'Something went wrong',
        icon: 'error',
        timer: 1500
      });
    }
  });
}


function addToCart(productId) {
  $.ajax({
    url: '/addToCart',
    method: 'POST',
    data: { productId, quantity: 1 },
    success: (response) => {
      if (!response.status) {
        Swal.fire({
          title: "Oops!",
          text: response.message,
          icon: 'warning',
          timer: 2000
        });
        return;
      }

      // ‚úÖ Always update the same badge
      const cartBadge = $("#cartCount");
      cartBadge.text(response.cartCount);

      if (response.cartCount > 0) {
        cartBadge.removeClass("d-none"); // show
      } else {
        cartBadge.addClass("d-none");    // hide
      }

      Swal.fire({
        title: "Added to Cart",
        text: response.message,
        icon: 'success',
        timer: 2000
      });
    },
    error: (xhr) => {
      const res = xhr.responseJSON;
      Swal.fire({
        title: "Failed",
        text: res?.message || "Something went wrong. Please try again.",
        icon: 'info',
        timer: 2000
      });
    }
  });
}

</script>


