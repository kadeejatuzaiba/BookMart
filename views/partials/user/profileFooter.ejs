  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Function to toggle sidebar visibility
function toggleSidebar() {
  if (window.innerWidth < 768) {
    // Small screens: open the Bootstrap offcanvas
    const offcanvas = new bootstrap.Offcanvas('#offcanvasProfileSidebar');
    offcanvas.show();
  } else {
    // Medium and large screens: toggle sidebar visibility
    const sidebar = document.getElementById('profileSidebar');
    const mainContent = document.querySelector('.main-content');
    sidebar.classList.toggle('hidden');

    // Optional: expand/shrink main content based on sidebar visibility
    if (sidebar.classList.contains('hidden')) {
      mainContent.style.marginLeft = '0';
    } else {
      mainContent.style.marginLeft = '0px'; // Match your sidebar width
    }
  }
}


    
  </script>
</body>
</html>